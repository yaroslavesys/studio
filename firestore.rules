rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Safely get user data for a given UID
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    // Get the role of the user making the request.
    // Returns null if the user document doesn't exist.
    function getRequestingUserRole() {
      return getUserData(request.auth.uid).role;
    }

    function getRequestingUserDepartmentId() {
      return getUserData(request.auth.uid).departmentId;
    }
    
    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Create: ANY signed-in user can create THEIR OWN user document.
      // This is the key fix for the login loop.
      allow create: if isSignedIn() && isOwner(userId);

      // Get: Any signed-in user can get any single user's profile.
      allow get: if isSignedIn();
      
      // List: Only Admins can list all users.
      allow list: if isSignedIn() && getRequestingUserRole() == 'Admin';
      
      // Update: A user can update their own document, or an Admin can update any document.
      allow update: if isSignedIn() && (isOwner(userId) || getRequestingUserRole() == 'Admin');

      // Delete: Disallowed for safety.
      allow delete: if false;
    }

    // DEPARTMENTS
    // Any signed-in user can read departments. Only Admins can write.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && getRequestingUserRole() == 'Admin';
    }

    // ACCESS REQUESTS
    match /accessRequests/{accessRequestId} {
      // Create: Users can create requests for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // List(Query): 
      // - Admins can list all requests.
      // - TechLeads can query requests for their department.
      // - Users can query their own requests.
      allow list: if isSignedIn() && (
        getRequestingUserRole() == 'Admin' ||
        (getRequestingUserRole() == 'TechLead' && request.query.departmentId == getRequestingUserDepartmentId()) ||
        (request.query.userId == request.auth.uid)
      );

      // Read (Get):
      // - Users can read their own requests.
      // - TechLeads can read requests for their department.
      // - Admins can read all requests.
      allow get: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        (getRequestingUserRole() == 'TechLead' && resource.data.departmentId == getRequestingUserDepartmentId()) ||
        getRequestingUserRole() == 'Admin'
      );
      
      // Update:
      // - TechLeads can update requests in their department.
      // - Admins can update any request.
      allow update: if isSignedIn() && (
         getRequestingUserRole() == 'Admin' ||
        (getRequestingUserRole() == 'TechLead' && get(/databases/$(database)/documents/accessRequests/$(accessRequestId)).data.departmentId == getRequestingUserDepartmentId())
      );
                      
      // Delete: Only admins can delete.
      allow delete: if isSignedIn() && getRequestingUserRole() == 'Admin';
    }
    
    // Meta collection for seeding info
    match /meta/{docId} {
        allow read, write: if true; // Allow anyone to read/write for seeding purposes.
    }
  }
}
