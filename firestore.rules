
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Auth token contains the custom claims set by the server.
    // This is the source of truth for a user's role.
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    function isTechLead() {
      return request.auth.token.isTechLead == true;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Read user data from the DB.
    // WARNING: This is a "read" operation and will be billed.
    // Use `request.auth.token` for roles whenever possible.
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // --- Security Rules for Collections ---

    // USERS
    // Users can be created on first login.
    // Users can update their own non-critical info.
    // Admins can update anything.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'teamId']));
      allow delete: if isAdmin();
    }
    
    // TEAMS, SERVICES, CONTACTS
    // These collections are managed only by administrators.
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // REQUESTS
    match /requests/{requestId} {
      // A user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // A tech lead can see requests for users on their team.
      function isUserOnTechLeadsTeam(userId) {
        let techLeadTeamId = getUserData(request.auth.uid).teamId;
        let userTeamId = getUserData(userId).teamId;
        return isTechLead() && techLeadTeamId != null && techLeadTeamId == userTeamId;
      }
      
      // Admins can see all requests.
      // Tech Leads and Users can see requests related to them/their team.
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        isAdmin() ||
        isUserOnTechLeadsTeam(resource.data.userId)
      );

      // Admins and the user's Tech Lead can update a request (approve/reject).
      allow update: if isSignedIn() && (isAdmin() || isUserOnTechLeadsTeam(resource.data.userId));
      
      allow delete: if isAdmin();
    }

    // NOTIFICATIONS
    match /notifications/{notificationId} {
      // Users can read and update (e.g., mark as read) their own notifications.
      allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Cloud Functions create notifications, so we check for signed-in state.
      allow create: if isSignedIn(); 
      // Users can delete their own notifications.
      allow delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }
  }
}
