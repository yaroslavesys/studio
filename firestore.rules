rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // --- Rules ---

    // USERS
    match /users/{userId} {
      // List: Only Admins can list all users.
      allow list: if isSignedIn() && getUserData(request.auth.uid).role == 'Admin';
      
      // Get: Users can get their own doc. Admins can get any.
      allow get: if isSignedIn() && (isOwner(userId) || getUserData(request.auth.uid).role == 'Admin');
      
      // Create: Any authenticated user can create THEIR OWN user document.
      allow create: if isSignedIn() && isOwner(userId);

      // Update: Users can update their own doc. Admins can update any.
      allow update: if isSignedIn() && (isOwner(userId) || getUserData(request.auth.uid).role == 'Admin');

      // Delete: Not allowed for now.
      allow delete: if false;
    }

    // DEPARTMENTS
    // Any signed-in user can read departments. Only Admins can write.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && getUserData(request.auth.uid).role == 'Admin';
    }

    // ACCESS REQUESTS
    match /accessRequests/{accessRequestId} {
      // Create: Users can create requests for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Read (Get & List):
      // - Admins can read all requests.
      // - TechLeads can read requests for their department.
      // - Users can read their own requests.
      allow read: if isSignedIn() && (
        getUserData(request.auth.uid).role == 'Admin' ||
        (getUserData(request.auth.uid).role == 'TechLead' && getUserData(request.auth.uid).departmentId == resource.data.departmentId) ||
        resource.data.userId == request.auth.uid
      );

      // Update:
      // - TechLeads can update requests in their department.
      // - Admins can update any request.
      // - Users cannot update their own requests once submitted.
      allow update: if isSignedIn() && (
        getUserData(request.auth.uid).role == 'Admin' ||
        (getUserData(request.auth.uid).role == 'TechLead' && getUserData(request.auth.uid).departmentId == request.resource.data.departmentId)
      );
                      
      // Delete: Only admins can delete.
      allow delete: if isSignedIn() && getUserData(request.auth.uid).role == 'Admin';
    }
  }
}
