
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check for admin role in the custom claims of the auth token.
      return request.auth.token.isAdmin == true;
    }

    function isTechLead() {
      // Check for tech lead role in the custom claims of the auth token.
      return request.auth.token.isTechLead == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A user can see their own profile, or an admin/tech lead can see any profile in their team.
    function canReadProfile(userId) {
      // Is the user trying to read their own profile?
      if (isOwner(userId)) {
        return true;
      }
      // Is the user an admin?
      if (isAdmin()) {
        return true;
      }
      // Is the user a tech lead?
      if (isTechLead()) {
        // A tech lead can read the profiles of users on their team.
        // resource.data refers to the document being read (the user's profile).
        return resource.data.teamId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId;
      }
      return false;
    }
    
    // USERS
    // Users can read any profile for now (simplified rule).
    // A better rule would be: allow read: if canReadProfile(userId);
    // Users can create their own profile upon signing up.
    // Users can update their own non-critical info (displayName, photoURL, teamId).
    // Admins can update any user profile, including roles.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'teamId']));
      allow delete: if isAdmin();
    }
    
    // TEAMS, SERVICES, CONTACTS
    // Only admins can create, update, or delete these core resources.
    // Any signed-in user can read them.
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // REQUESTS
    // This is the most critical ruleset.
    match /requests/{requestId} {
      // Any signed-in user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // LIST: Only Admins can list all requests. Tech Leads cannot.
      allow list: if isAdmin();
      
      // GET: A user can get their own request. Admins/TechLeads can get any request.
      allow get: if isSignedIn() && (isAdmin() || isTechLead() || resource.data.userId == request.auth.uid);

      // Admins and TechLeads can update requests (e.g., change status).
      allow update: if isSignedIn() && (isAdmin() || isTechLead());
      
      // Only admins can delete requests.
      allow delete: if isAdmin();
    }
  }
}
