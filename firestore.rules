rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Rules ---

    // USERS
    match /users/{userId} {
      // List: Only Admins can list all users. This relies on the client query being correct.
      // This rule only checks if the requesting user's document has the Admin role.
      allow list: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      
      // Get: Users can get their own doc. TechLeads and Admins can get any user within their query scope.
      // The security is enforced by the query in the client code.
      allow get: if isSignedIn();
      
      // Create: Any authenticated user can create THEIR OWN user document.
      allow create: if isSignedIn() && isOwner(userId);

      // Update: Users can update their own doc. Admins can update any.
      allow update: if isSignedIn() && (isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');

      // Delete: Not allowed for now.
      allow delete: if false;
    }

    // DEPARTMENTS
    // Any signed-in user can read departments. Only Admins can write.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // ACCESS REQUESTS
    match /accessRequests/{accessRequestId} {
      // Create: Users can create requests for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // List: Only Admins can list all requests.
      allow list: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      
      // Query: TechLeads can query requests for their department.
      allow list: if isSignedIn() 
                  && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TechLead'
                  && request.query.limit <= 100 // Add a reasonable limit
                  && request.query.get('departmentId') == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departmentId;

      // Read (Get):
      // - Admins can read all requests. (covered by list)
      // - TechLeads can read requests for their department.
      // - Users can read their own requests.
      allow get: if isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TechLead' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departmentId == resource.data.departmentId) ||
        resource.data.userId == request.auth.uid
      );
      
      // Update:
      // - TechLeads can update requests in their department.
      // - Admins can update any request.
      // - Users cannot update their own requests once submitted.
      allow update: if isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TechLead' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departmentId == request.resource.data.departmentId)
      );
                      
      // Delete: Only admins can delete.
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
