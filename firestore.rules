rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // This function is problematic and is being replaced by custom claims checks.
    // function getUserRole(userId) {
    //   return get(/databases/$(database)/documents/users/$(userId)).data.role;
    // }
    
    function isUserInRole(roles) {
      return request.auth.token.role in roles;
    }

    match /users/{userId} {
      // Admins can list all users.
      allow list: if isSignedIn() && isUserInRole(['Admin']);
      // Users can only read their own profile, Admins can read any.
      allow get: if isSignedIn() && (isOwner(userId) || isUserInRole(['Admin']));
      // New users can create their own profile. Admin can update any profile. Owner can update their own.
      allow write: if isSignedIn() && ((request.method == 'create' && isOwner(userId)) || isUserInRole(['Admin']) || (isOwner(userId) && request.method != 'create'));
    }

    // Departments are public for authenticated users. Only Admins can modify them.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isUserInRole(['Admin']);
    }

    // Access Requests
    match /accessRequests/{accessRequestId} {
      // Create: Any authenticated user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Get: Users can read their own requests. TechLeads can read requests for their department. Admins can read all.
      allow get: if isSignedIn() && 
                    (resource.data.userId == request.auth.uid || 
                     isUserInRole(['Admin']) ||
                     (isUserInRole(['TechLead']) && resource.data.departmentId == request.auth.token.departmentId));

      // List: Only Admins can list all requests.
      allow list: if isSignedIn() && isUserInRole(['Admin']);
      
      // Update: 
      // - Owners can't update.
      // - TechLeads can update status for their department's requests.
      // - Admins can update any request.
      allow update: if isSignedIn() && 
                      (isUserInRole(['Admin']) ||
                      (isUserInRole(['TechLead']) && request.resource.data.departmentId == request.auth.token.departmentId));
                      
      // Delete: Only admins can delete requests.
      allow delete: if isSignedIn() && isUserInRole(['Admin']);
    }
  }
}
