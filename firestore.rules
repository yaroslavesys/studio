rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // --- Rules ---

    // USERS
    match /users/{userId} {
      // List: Only Admins can list all users. 
      // This rule reads the requesting user's own document to check their role.
      allow list: if isSignedIn() && getRequestingUserData().role == 'Admin';
      
      // Get: Users can get their own doc. Admins can get any.
      allow get: if isSignedIn() && (isOwner(userId) || getRequestingUserData().role == 'Admin');
      
      // Create: Any authenticated user can create THEIR OWN user document.
      allow create: if isSignedIn() && isOwner(userId);

      // Update: Users can update their own doc. Admins can update any.
      allow update: if isSignedIn() && (isOwner(userId) || getRequestingUserData().role == 'Admin');

      // Delete: Not allowed for now.
      allow delete: if false;
    }

    // DEPARTMENTS
    // Any signed-in user can read departments. Only Admins can write.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && getRequestingUserData().role == 'Admin';
    }

    // ACCESS REQUESTS
    match /accessRequests/{accessRequestId} {
      // Create: Users can create requests for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // List: Only Admins can list all requests.
      allow list: if isSignedIn() && getRequestingUserData().role == 'Admin';

      // Read (Get):
      // - Admins can read all requests.
      // - TechLeads can read requests for their department.
      // - Users can read their own requests.
      allow get: if isSignedIn() && (
        getRequestingUserData().role == 'Admin' ||
        (getRequestingUserData().role == 'TechLead' && getRequestingUserData().departmentId == resource.data.departmentId) ||
        resource.data.userId == request.auth.uid
      );
      
      // We don't need a specific query rule here because the client-side code for TechLead
      // already constrains the query by departmentId. We just need to ensure they can't
      // query other departments. The 'get' rule implicitly helps secure this for single-doc reads.
      // The client query logic combined with read rule provides sufficient security.


      // Update:
      // - TechLeads can update requests in their department.
      // - Admins can update any request.
      // - Users cannot update their own requests once submitted.
      allow update: if isSignedIn() && (
        getRequestingUserData().role == 'Admin' ||
        (getRequestingUserData().role == 'TechLead' && getRequestingUserData().departmentId == request.resource.data.departmentId)
      );
                      
      // Delete: Only admins can delete.
      allow delete: if isSignedIn() && getRequestingUserData().role == 'Admin';
    }
  }
}
