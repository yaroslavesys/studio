rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Returns true if the user's profile in firestore has isAdmin: true
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Returns true if the user's profile in firestore has isTechLead: true
    function isTechLead() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTechLead == true;
    }
    
    // Returns true if the requesting user is the tech lead of a specific team
    function isTeamTechLead(teamId) {
      return isTechLead() && get(/databases/$(database)/documents/teams/$(teamId)).data.techLeadId == request.auth.uid;
    }
    
    // Returns true if the user being accessed is in the tech lead's team
    function isUserInTechLeadTeam(userId) {
      let userTeamId = get(/databases/$(database)/documents/users/$(userId)).data.teamId;
      let techLeadTeamId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId;
      return isTechLead() && userTeamId == techLeadTeamId;
    }

    // Returns true if the user being accessed is in the same team as the requesting user
    function isUserInSameTeam(userId) {
      let requestingUserTeamId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId;
      let targetUserTeamId = get(/databases/$(database)/documents/users/$(userId)).data.teamId;
      // Ensure both users are in a team and the teams are the same
      return requestingUserTeamId != null && requestingUserTeamId == targetUserTeamId;
    }


    // USERS
    // Users can read their own document.
    // Admins can read any user document.
    // TechLeads can read users in their team.
    // Regular users can read profiles of users in the same team.
    match /users/{userId} {
       allow read: if isSignedIn() && (isOwner(userId) || isAdmin() || isUserInTechLeadTeam(userId) || isUserInSameTeam(userId));
      
      // Users can create their own profile.
      // The `isAdmin` and `isTechLead` fields must be false unless set by specific emails.
      // This prevents users from making themselves admins or tech leads on signup.
      allow create: if isSignedIn() && isOwner(userId) &&
        (request.resource.data.isAdmin == (request.auth.token.email == 'yaroslav_system.admin@trafficdevils.net') && request.resource.data.isAdmin == true || request.resource.data.isAdmin == false) &&
        (request.resource.data.isTechLead == (request.auth.token.email == 'yaroslav_system.admin@newdevils.net') && request.resource.data.isTechLead == true || request.resource.data.isTechLead == false);
        

      // Users can update their own profile, but they CANNOT make themselves an admin or tech lead.
      // Admins can update any user profile, including roles and team assignments.
      allow update: if isSignedIn() && 
        ((isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin && request.resource.data.isTechLead == resource.data.isTechLead) || isAdmin());
      
      // Only admins can delete users.
      allow delete: if isAdmin();

      // Admins can list users. TechLeads can only list users in their team.
      // Users can list members of their own team.
       allow list: if isAdmin() || isTechLead() || isSignedIn();
    }
    
    // TEAMS
    match /teams/{teamId} {
      // Admins can read any team. 
      // TechLeads can ONLY read their own team document.
      // Any user can read the document of the team they belong to.
      allow get: if isSignedIn() && (isAdmin() || isTeamTechLead(teamId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId);
      
      // Admins can list all teams. 
      // TechLeads can query for their own team, but only if they request exactly one document.
      // This prevents them from listing all teams.
      allow list: if isSignedIn() && (isAdmin() || (isTechLead() && request.query.limit <= 1));
      
      // Only Admins can create, update, or delete teams.
      allow create, update, delete: if isAdmin();
    }

    // SERVICES
    // Any signed-in user can read the list of available services.
    // This allows the client to show what can be requested.
    match /services/{serviceId} {
      allow read: if isSignedIn();
      // Only admins can create, update, or delete services.
      allow write: if isAdmin();
    }

    // REQUESTS
    match /requests/{requestId} {
      // Users can create their own requests.
      // The request must be for the user themselves and start in 'pending' state.
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'pending';
      
      // Users can read their own requests.
      // Admins can read any request.
      // TechLeads can read requests from users in their team.
      function isRequestFromTechLeadTeam(requestDoc) {
        let requestUserId = requestDoc.data.userId;
        return isUserInTechLeadTeam(requestUserId);
      }
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin() || isRequestFromTechLeadTeam(resource));
      
      // Admins and relevant TechLeads can update requests according to the workflow.
      allow update: if isSignedIn() && 
        (
          // Case 1: TechLead approves a pending request for their team member.
          (isTechLead() && 
           resource.data.status == 'pending' && 
           (request.resource.data.status == 'approved_by_tech_lead' || request.resource.data.status == 'rejected') &&
           isRequestFromTechLeadTeam(resource)
          ) ||
          // Case 2: Admin completes a request that was approved by a tech lead.
          (isAdmin() &&
           resource.data.status == 'approved_by_tech_lead' &&
           (request.resource.data.status == 'completed' || request.resource.data.status == 'rejected')
          ) ||
          // Case 3: Admin directly approves or rejects a pending request.
          (isAdmin() &&
            resource.data.status == 'pending' &&
            (request.resource.data.status == 'approved_by_tech_lead' || request.resource.data.status == 'rejected')
          )
        );
      
      // Only admins can delete requests.
      allow delete: if isAdmin();

      // Admins can list all requests.
      // TechLeads can list requests from their team members.
      allow list: if isSignedIn() && (isAdmin() || isTechLead());
    }
    
    // CONTACTS
    // Any signed-in user can read the list of contact links.
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      // Only admins can create, update, or delete contact links.
      allow write: if isAdmin();
    }
  }
}