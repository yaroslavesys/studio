rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Returns true if the user's profile in firestore has isAdmin: true
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Returns true if the user's profile in firestore has isTechLead: true
    function isTechLead() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTechLead == true;
    }
    
    // Returns true if the requesting user is the tech lead of a specific team
    function isTeamTechLead(teamId) {
      return isTechLead() && get(/databases/$(database)/documents/teams/$(teamId)).data.techLeadId == request.auth.uid;
    }
    
    // Returns true if the user being accessed is in the tech lead's team
    function isUserInTechLeadTeam(userId) {
      let userTeamId = get(/databases/$(database)/documents/users/$(userId)).data.teamId;
      // This is a more secure way to check team membership.
      // The tech lead must prove they are the lead of the team they are trying to read from.
      let techLeadTeamId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId;
      return isTechLead() && userTeamId == techLeadTeamId;
    }


    // USERS
    // Users can read their own document.
    // Admins can read any user document.
    // TechLeads can read users in their team
    match /users/{userId} {
       allow read: if isSignedIn() && (isOwner(userId) || isAdmin() || isUserInTechLeadTeam(userId));
      
      // Users can create their own profile.
      // The `isAdmin` field can only be set to true if the user's email matches the admin email. Otherwise, it must be false.
      // The `isTechLead` field can only be set to true if the user's email matches the tech lead email. Otherwise, it must be false.
      allow create: if isSignedIn() && isOwner(userId) &&
        (request.resource.data.isAdmin == (request.auth.token.email == 'yaroslav_system.admin@trafficdevils.net') || request.resource.data.isAdmin == false) &&
        (request.resource.data.isTechLead == (request.auth.token.email == 'yaroslav_system.admin@newdevils.net') || request.resource.data.isTechLead == false);

      // Users can update their own profile, but they CANNOT make themselves an admin or tech lead.
      // Admins can update any user profile.
      allow update: if isSignedIn() && 
        ((isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin && request.resource.data.isTechLead == resource.data.isTechLead) || isAdmin());
      
      // Only admins can delete users.
      allow delete: if isAdmin();

      // Admins and TechLeads can list users. TechLeads can only list users in their team.
       allow list: if isAdmin() || isTechLead();
    }
    
    // TEAMS
    match /teams/{teamId} {
      // Admins can read any team. TechLeads can ONLY read their own team document.
      allow get: if isSignedIn() && (isAdmin() || isTeamTechLead(teamId));
      // Admins can list all teams. TechLeads can query for their own team.
      allow list: if isSignedIn() && (isAdmin() || (isTechLead() && request.query.limit <= 1));
      allow create, update, delete: if isAdmin();
    }
  }
}
