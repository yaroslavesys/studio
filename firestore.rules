
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    function isTechLead() {
      return request.auth.token.isTechLead == true;
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      
      // Users can create their own profile.
      // Roles are set via custom claims, but the document can be created by the user.
      allow create: if isOwner(userId);

      // Admins can update any user. Users can only update their own profile, but cannot change their roles.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'teamId']));
      
      allow delete: if isAdmin();
    }
    
    // TEAMS
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // SERVICES
    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // REQUESTS
    match /requests/{requestId} {
      // Any signed-in user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Admins and TechLeads can read all requests (for list queries).
      // A user can read their own specific request document.
      allow list: if isSignedIn() && (isAdmin() || isTechLead());
      allow get: if isSignedIn() && (isAdmin() || isTechLead() || resource.data.userId == request.auth.uid);

      // Admins and TechLeads can update requests.
      allow update: if isSignedIn() && (isAdmin() || isTechLead());
      
      // Only admins can delete requests.
      allow delete: if isAdmin();
    }
    
    // CONTACTS
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
