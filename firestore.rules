
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    function isTechLead() {
      return request.auth.token.isTechLead == true;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'teamId']));
      allow delete: if isAdmin();
    }
    
    // TEAMS, SERVICES, CONTACTS
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // REQUESTS
    match /requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // LIST: Admins can list all. TechLeads can list requests for their team members.
      allow list: if isAdmin() || 
                  (isTechLead() && getUserData(request.auth.uid).teamId == getUserData(request.query.filters[0].value[0]).teamId);

      // GET: A user can get their own request. An admin can get any. A tech lead can get requests from their team.
      function isUserOnTechLeadsTeam(userId) {
        let techLeadTeamId = getUserData(request.auth.uid).teamId;
        let userTeamId = getUserData(userId).teamId;
        return techLeadTeamId != null && techLeadTeamId == userTeamId;
      }
      allow get: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        isAdmin() ||
        (isTechLead() && isUserOnTechLeadsTeam(resource.data.userId))
      );

      // UPDATE: Admins and TechLeads can update requests for their team.
      allow update: if isSignedIn() && (isAdmin() || (isTechLead() && isUserOnTechLeadsTeam(resource.data.userId)));
      
      // DELETE: Only admins can delete requests.
      allow delete: if isAdmin();
    }
  }
}
