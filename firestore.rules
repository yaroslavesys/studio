
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      
      allow create: if isSignedIn() && isOwner(userId) &&
        (request.resource.data.isAdmin == (request.auth.token.email == 'yaroslav_system.admin@trafficdevils.net') || request.resource.data.isAdmin == false) &&
        (request.resource.data.isTechLead == (request.auth.token.email == 'yaroslav_system.admin@newdevils.net') || request.resource.data.isTechLead == false);

      allow update: if isSignedIn() && 
        ((isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin && request.resource.data.isTechLead == resource.data.isTechLead) || getUserData().isAdmin == true);
      
      allow delete: if getUserData().isAdmin == true;
    }
    
    // TEAMS
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if getUserData().isAdmin == true;
    }

    // SERVICES
    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if getUserData().isAdmin == true;
    }

    // REQUESTS
    match /requests/{requestId} {
      // Users can create their own requests, embedding their roles at creation time.
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      // Ensure the embedded roles match the user's actual roles from their profile
                      request.resource.data.userIsAdmin == getUserData().isAdmin &&
                      request.resource.data.userIsTechLead == getUserData().isTechLead;
      
      // Admins and TechLeads can read any request based on roles at time of request.
      // Users can only read their own requests.
      // This rule DOES NOT use get() and is safe for list queries.
      allow read: if isSignedIn() && 
                    (resource.data.userId == request.auth.uid || 
                     (getUserData().isAdmin == true && resource.data.userIsAdmin == true) || 
                     (getUserData().isTechLead == true && resource.data.userIsTechLead == true) ||
                     getUserData().isAdmin == true // Admins can read all
                    );

      // Admins and TechLeads can update requests.
      allow update: if isSignedIn() && (getUserData().isAdmin == true || getUserData().isTechLead == true);
      
      // Only admins can delete requests.
      allow delete: if getUserData().isAdmin == true;
    }
    
    // CONTACTS
    match /contacts/{contactId} {
      allow read: if isSignedIn();
      allow write: if getUserData().isAdmin == true;
    }
  }
}
